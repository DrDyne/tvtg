doctype 5
html
  head
    block mixins
      include mixins/styles
      include mixins/articles
    mixin include_style('bootstrap')
    mixin include_style('style')
    mixin include_style('add')
    block style
  body
    include header
    include menu

    block content

    block footer
    block js
      mixin include_js('vendor/jquery-ui/js/jquery-1.8.0.min')
      mixin include_js('vendor/jquery-ui/js/jquery-ui-1.8.23.custom.min')
      mixin include_js('vendor/waypoints.min')
      // Backbone itself
      mixin include_js('underscore-min')
      mixin include_js('backbone-min')
      // main TVTG backbone model and view
      mixin include_js('models/TVTG')
      // header top console
      mixin include_js('models/console')
      mixin include_js('views/console')
      // Post
      mixin include_js('models/post')

      mixin include_js('views/TVTG')